<style>
  .container1{
    text-align: center;
    position: relative;

  }
  .container2 {
    position: absolute;
    top: 50%;
    left: 50%;
    margin-right: -50%;
    transform: translate(-50%, -50%)
  }

  .buttonHolder {
    position: absolute;
    top: 50%;
    left: 50%;
    margin-right: -50%;
    transform: translate(-50%, -50%);
    size: large;
  }

  #background {
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  background: url(/assets/back.jpg);
  height: 100%;
}

</style>
<!DOCTYPE html>
<html>
  <head>
    <title>Activityfinder</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar sticky-top navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
        </div>
        <ul class="nav navbar-nav">
          <li class="active"><a href="http://localhost:3000/"><span class="glyphicon glyphicon-home"></span></a></li>
          <li><a href="/bookings/">My Bookings <span class="glyphicon glyphicon-glass"></span></a></li>
          <%if @current_user %>
              <li><a href="<%= user_path(@current_user) %>"><%= @current_user.name %><span class="glyphicon glyphicon-user"></a></li>
            <li>  <%= button_to "logout", logout_path, method: :delete, class: "btn btn-warning btn-lg" %></li>
          <% else %>
          <li><a href="/login_form">Login <span class="glyphicon glyphicon-user"></span></a></li>
          <li><a href="/users/new">Create Account <span class="glyphicon glyphicon-plus"></span></a></li></ul>
          <%end%>
      </div>
    </nav>
    <div id="background">
      <%= yield %>

    </div>
  </body>
</html>
