<style>
  .container1{
    text-align: center;
    position: relative;

  }
  .container2 {
    position: absolute;
    top: 50%;
    left: 50%;
    margin-right: -50%;
    transform: translate(-50%, -50%)
  }

  .buttonHolder {
    position: absolute;
    top: 50%;
    left: 50%;
    margin-right: -50%;
    transform: translate(-50%, -50%);
    size: large;
  }


  body {
    background-color: #f4511e
  }

</style>
<!DOCTYPE html>
<html>
  <head>
    <title>Activityfinder</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
        </div>
        <ul class="nav navbar-nav">
          <li class="active"><a href="#"><span class="glyphicon glyphicon-home"></span></a></li>
          <li><a href="/bookings/">My Bookings <span class="glyphicon glyphicon-glass"></span></a></li>
          <%if @current_user %>
              <li><a href="<%= user_path(@current_user) %>"><%= @current_user.name %><span class="glyphicon glyphicon-user"></a></li>
              <%= button_to "logout", logout_path, method: :delete %>
          <% else %>
          <li><a href="/login_form">Login <span class="glyphicon glyphicon-user"></span></a></li>
          <li><a href="/users/new">Create Account <span class="glyphicon glyphicon-plus"></span></a></li></ul>
          <%end%>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
