<style>
.logo {
  font-size: 300px;
}
@media screen and (max-width: 768px) {
  .col-sm-4 {
    text-align: center;
    margin: 25px 0;
  }
}
.container-fluid {
background-color: #f4511e; /* Orange */
color: #ffffff;
}
</style>
<div class="container">
  <div class="logo">
    <div class="row">
      <div class="offset-sm-8">
        <h1 class="text-center">ACTIVITY FINDER</h1>
      </div>
    </div>
  </div>
  <%= flash[:errors] if flash[:errors] %>

<div class="container-fluid">
  <div class="row">
    <div class="col-lg-4 col-sm-4 ">
      <%= form_for :user, url: "/login", method: "post" do |f|%>
      <div class="form-group">
        <%=f.label :name %>
        <%=f.text_field  :name%>
      </div>
      <div class="form-group">
        <%=f.label :email%>
        <%=f.text_field :email%>
      </div>
      <div class="form-group">
        <%=f.label :password%>
        <%=f.text_field :password %>
      </div>
      <div class="form-group">
        <%=f.submit "Log In!", class: "btn btn-primary btn-lg" %>
      </div>
      <% end %>
  </div>
</div>



</div>
