<h1> Create an Account!!</h1>


<% if flash[:errors] %>
<%flash[:errors].each do |error|%>
<li><%= error %></li>
<% end %>
<%end%>

<%= form_for :user, url: users_path do |f|%>
<%=f.label :name %>
<%=f.text_field  :name%>
<%=f.label :email%>
<%=f.text_field :email%>
<%=f.label :password%>
<%=f.text_field :password%>
<%=f.submit "Create your Account" %>
<% end %>
