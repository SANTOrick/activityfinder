  <style>
  .logo {
    font-size: 300px;
  }
  @media screen and (max-width: 768px) {
    .col-sm-4 {
      text-align: center;
      margin: 25px 0;
    }
  }
  .container-fluid {
  background-color: #f4511e; /* Orange */
  color: #ffffff;
}
  </style>
  <div class="container">
    <div class="logo">
      <div class="row">
        <div class="offset-sm-8">
          <h1 class="text-center">ACTIVITY FINDER</h1>
        </div>
      </div>
    </div>
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-8 col-lg-8">
        <h2>We find activities for you!</h2>
        <h4>Maybe not the ones you like</h4>
        <p>..nor you ever heard of</p>
        <%= button_to "Random activity", activities_path(Activity.all.sample.id, class: "btn btn-primary") %>
      </div>
      <div class="col-lg-4 col-sm-4 ">
        <%= form_for :users, url: users_path do |f|%>
        <div class="form-group">
          <%=f.label :name %>
          <%=f.text_field  :name%>
        </div>
        <div class="form-group">
          <%=f.label :email%>
          <%=f.text_field :email%>
        </div>
        <div class="form-group">
          <%=f.label :password%>
          <%=f.text_field :password %>
        </div>
        <div class="form-group">
          <%=f.submit "Create your Account", class: "btn btn-primary btn-lg" %>
        </div>
        <% end %>
    </div>
  </div>



</div>
